{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON Schema for Topology Configuration",
  "description": "Describes the topology configuration for a network device",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "interface_configuration": {
      "type": "object",
      "description": "The list of interfaces defined",
      "required": ["name", "type", "description"],
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 20
        },
        "description": {
          "type": "string",
          "maxLength": 255
        },
        "mac": {
          "type": "string",
          "maxLength": 17,
          "pattern": "^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$"
        },
        "mtu": {
          "type": "integer",
          "minimum": 576,
          "maximum": 9216
        },
        "speed": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1000000000
        },
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "connected_to": {
          "type": "object",
          "description": "The name of the interface this interface is connected to",
          "maxLength": 20,
          "$ref": "#/definitions/connection"
        },
        "addresses": {
          "type": "array",
          "title": "Addresses",
          "uniqueItems": true,
          "additionalItems": true,
          "items": {
            "type": "object",
            "anyOf": [
              {
                "$ref": "./network.definitions.schema.json#/definitions/ipv4_address"
              },
              {
                "$ref": "./network.definitions.schema.json#/definitions/ipv6_address"
              }
            ]
          }
        }
      }
    },
    "network_interface": {
      "title": "Network Interface",
      "allOf": [
        {
          "title": "Type",
          "description": "Type of the Network Interface",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["ethernet", "virtual", "loopback", "child"]
            }
          }
        },
        { "$ref": "#/definitions/interface_configuration" }
      ]
    },
    "bridge_interface": {
      "title": "Bridge Interface",
      "required": ["bridge_members"],
      "allOf": [
        {
          "properties": {
            "type": {
              "type": "string",
              "enum": ["bridge"]
            }
          }
        },
        { "$ref": "#/definitions/interface_configuration" },
        {
          "properties": {
            "bridge_members": {
              "type": "array",
              "title": "Bridge Members",
              "uniqueItems": true,
              "items": {
                "$ref": "#/definitions/network_interface"
              }
            }
          }
        }
      ]
    },
    "bgp_configuration": {
      "title": "BGP Configuration",
      "description": "Represents the bgp configuration of a device",
      "properties": {
        "transit": {
          "title": "Transit",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "asn": { "type": "integer" },
              "remote": {
                "type": "array",
                "items": {
                  "oneOf": [
                    {
                      "$ref": "./network.definitions.schema.json#/definitions/ipv4_address"
                    },
                    {
                      "$ref": "./network.definitions.schema.json#/definitions/ipv6_address"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "ospf_configuration": {
      "title": "OSPF Configuration",
      "description": "Represents the ospf configuration of a device",
      "items": {}
    },
    "connection": {
      "type": "object",
      "description": "Represents a connection to a (network) device",
      "required": ["hostname"],
      "properties": {
        "hostname": {
          "type": "string",
          "maxLength": 255
        },
        "port": {
          "type": "string",
          "maxLength": 255
        }
      }
    }
  },
  "required": ["type"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["TopologyConfiguration"]
    },
    "interfaces": {
      "type": "array",
      "title": "Interfaces",
      "uniqueItems": true,
      "items": {
        "oneOf": [
          { "$ref": "#/definitions/network_interface" },
          { "$ref": "#/definitions/bridge_interface" }
        ]
      }
    },
    "routing": {
      "type": "array",
      "title": "Routing",
      "uniqueItems": true,
      "properties": {
        "bgp": {
          "$ref": "#/definitions/bgp_configuration"
        },
        "ospf": { "$ref": "#/definitions/ospf_configuration" }
      }
    }
  }
}
