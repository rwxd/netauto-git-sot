{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON Schema for Network Configuration",
  "description": "Describes the Configuration of a Network Device",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "interface_configuration": {
      "type": "object",
      "description": "The list of interfaces defined",
      "required": ["name", "type", "description"],
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 20,
          "pattern": "^[^\\s]*$"
        },
        "description": {
          "type": "string",
          "maxLength": 255
        },
        "mac": {
          "type": "string",
          "maxLength": 17,
          "pattern": "^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$"
        },
        "mtu": {
          "type": "integer",
          "minimum": 576,
          "maximum": 9216
        },
        "speed": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1000000000
        },
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "connected_to": {
          "type": "object",
          "description": "The name of the interface this interface is connected to",
          "maxLength": 20,
          "pattern": "^[^\\s]*$",
          "$ref": "#/definitions/connection"
        },
        "addresses": {
          "type": "array",
          "title": "Addresses",
          "uniqueItems": true,
          "additionalItems": true,
          "items": {
            "type": "object",
            "oneOf": [
              {
                "$ref": "/home/fwrage/dev/netauto-git-sot/schemas/network.definitions.schema.json#/definitions/ipv4_address"
              },
              {
                "$ref": "/home/fwrage/dev/netauto-git-sot/schemas/network.definitions.schema.json#/definitions/ipv6_address"
              }
            ]
          }
        }
      }
    },
    "network_interface": {
      "title": "Network Interface",
      "allOf": [
        {
          "title": "Type",
          "description": "Type of the Network Interface",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["ethernet", "virtual", "loopback", "child"]
            }
          }
        },
        { "$ref": "#/definitions/interface_configuration" }
      ]
    },
    "bridge_interface": {
      "title": "Bridge Interface",
      "required": ["bridge_members"],
      "allOf": [
        {
          "properties": {
            "type": {
              "type": "string",
              "enum": ["bridge"]
            }
          }
        },
        { "$ref": "#/definitions/interface_configuration" },
        {
          "properties": {
            "bridge_members": {
              "type": "array",
              "title": "Bridge Members",
              "uniqueItems": true,
              "items": {
                "$ref": "#/definitions/network_interface"
              }
            }
          }
        }
      ]
    },
    "bgp_configuration": {
      "title": "BGP Configuration",
      "description": "Represents the bgp configuration of a device",
      "properties": {
        "transit": {
          "title": "Transit",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "asn": { "type": "integer" },
              "remote": {
                "type": "array",
                "items": {
                  "oneOf": [
                    {
                      "$ref": "/home/fwrage/dev/netauto-git-sot/schemas/network.definitions.schema.json#/definitions/ipv4_address"
                    },
                    {
                      "$ref": "/home/fwrage/dev/netauto-git-sot/schemas/network.definitions.schema.json#/definitions/ipv6_address"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "ospf_configuration": {
      "title": "OSPF Configuration",
      "description": "Represents the ospf configuration of a device",
      "items": {}
    },
    "location": {
      "title": "Device Location",
      "properties": {
        "datacenter": {
          "type": "string",
          "maxLength": 64,
          "pattern": "^[^\\s]*$"
        },
        "room": {
          "type": "string",
          "maxLength": 64,
          "pattern": "^[^\\s]*$"
        },
        "rack": {
          "type": "string",
          "maxLength": 64,
          "pattern": "^[^\\s]*$"
        },
        "shelf": {
          "type": "string",
          "maxLength": 64,
          "pattern": "^[^\\s]*$"
        }
      }
    },
    "connection": {
      "type": "object",
      "description": "Represents a connection to a (network) device",
      "required": ["hostname"],
      "properties": {
        "hostname": {
          "type": "string",
          "maxLength": 255,
          "pattern": "^[^\\s]*$"
        },
        "port": {
          "type": "string",
          "maxLength": 255,
          "pattern": "^[^\\s]*$"
        }
      }
    }
  },
  "required": ["type", "general", "hardware", "software"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["DeviceConfiguration"]
    },
    "general": {
      "type": "object",
      "title": "General Settings",
      "additionalProperties": true,
      "required": [
        "hostname",
        "fqdn",
        "type",
        "tenant",
        "location",
        "timezone"
      ],
      "properties": {
        "hostname": {
          "type": "string",
          "maxLength": 64,
          "pattern": "^[^\\s]*$"
        },
        "fqdn": {
          "type": "string",
          "maxLength": 255,
          "pattern": "^[^\\s]*$"
        },
        "type": {
          "type": "string",
          "enum": [
            "Router",
            "Switch",
            "Firewall",
            "WirelessRouter",
            "WirelessSwitch",
            "WirelessAccessPoint"
          ]
        },
        "tenant": { "type": "string", "maxLength": 64, "pattern": "^[^\\s]*$" },
        "location": {
          "$ref": "#/definitions/location"
        },
        "description": {
          "type": "string"
        },
        "timezone": {
          "type": "string"
        }
      }
    },
    "hardware": {
      "type": "object",
      "title": "Hardware",
      "description": "The hardware of the device",
      "additionalProperties": true,
      "properties": {
        "manufacturer": {
          "type": "string",
          "enum": ["Cisco", "Juniper", "Mellanox", "Checkpoint"]
        },
        "model": {
          "type": "string",
          "enum": [
            "Cisco Nexus",
            "Juniper EX",
            "Juniper QFX",
            "Juniper SRX",
            "Juniper SRX-Firewall",
            "Mellanox XY",
            "Checkpoint ABC"
          ]
        },
        "serial_number": {
          "type": "string",
          "description": "The serial number of the device",
          "maxLength": 64
        },
        "asset_tag": {
          "type": "string",
          "description": "The asset tag of the device",
          "maxLength": 64
        }
      }
    },
    "software": {
      "type": "object",
      "title": "Software",
      "description": "The software of the device",
      "additionalProperties": true,
      "required": ["os", "os_version"],
      "properties": {
        "os": {
          "type": "string",
          "enum": ["Cisco IOS", "Juniper Junos", "Cumulus Linux", "Gaia OS"]
        },
        "os_version": {
          "type": "string",
          "enum": [
            "Cisco IOS 12.4(9)T1",
            "Cisco IOS 12.4(7)a",
            "Cisco IOS 12.2(25)SEB4"
          ]
        },
        "description": {
          "type": "string"
        }
      }
    },
    "interfaces": {
      "type": "array",
      "title": "Interfaces",
      "uniqueItems": true,
      "items": {
        "oneOf": [
          { "$ref": "#/definitions/network_interface" },
          { "$ref": "#/definitions/bridge_interface" }
        ]
      }
    },
    "routing": {
      "type": "array",
      "title": "Routing",
      "uniqueItems": true,
      "properties": {
        "bgp": {
          "$ref": "#/definitions/bgp_configuration"
        },
        "ospf": { "$ref": "#/definitions/ospf_configuration" }
      }
    }
  }
}
